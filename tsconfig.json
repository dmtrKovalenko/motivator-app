{
  "compilerOptions": {
    "skipLibCheck": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": [
    "./App.tsx",
    "./src/**/*.ts*",
    "./typings.d.ts",
  ]
}
